VERSION=@VERSION@

usage() {
    echo "usage: ${0##*/} [options]" >&2
    echo 'options:' >&2
    echo "   -s: send the mail" >&2
    echo "   -p: print the mail to stdout" >&2
    echo "   -h: this help" >&2
    echo "   -v: print mailboot version" >&2
    exit ${1:-1}
}

print_version() {
    echo $VERSION
}

print_mail() {
    source /etc/os-release

    echo "To: \"$(getent passwd root|cut -f5 -d:)\" <root>"
    echo "Subject: [MAILBOOT] $(hostname -f)"
    echo
    echo "Operating system is $NAME"
    echo "Kernel is $(uname -s) $(uname -r) on $(uname -m)"
    echo
    echo "Current time is $(date -R)"
    echo "System is up since $(date -d "$(uptime -s)" -R)"
    echo
    echo "$(systemd-analyze)"
    echo
    echo 'Last:'
    last -5 -FRwx|head -n 5
}


send_mail() {
    print_mail | sed 's/$/\r/' | sendmail root
}

while getopts 'psvh' opt; do
    case $opt in
        s) send_mail;;
        p) print_mail;;
        v) print_version;;
        h) usage 0;;
        *) usage;;
    esac
done

(( $OPTIND != 1 )) || usage

